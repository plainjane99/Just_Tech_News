{{!-- import the partial from post-info file 
    import with the > character, followed by the name of the partial file 
    and the object we'll pass to the partial--}}
{{> post-info post }}

{{!-- handlebars helper {{#if}} that checks if the value inside is truthy
allows comments to be submitted only if user is logged in --}}
{{#if loggedIn}}
<form class="comment-form">
    <div>
        <textarea name="comment-body"></textarea>
    </div>

    <div>
        <button type="submit">add comment</button>
        <button type="button" class="upvote-btn">upvote</button>
    </div>
</form>
{{/if}}

{{> comments post.comments}}

{{#if loggedIn}}
{{!-- access routes to comment and upvote --}}
<script src="/javascript/comment.js"></script>
<script src="/javascript/upvote.js"></script>
{{/if}}