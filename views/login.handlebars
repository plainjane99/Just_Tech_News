{{!-- handle both login and signup functionality --}}
{{!-- login functionality --}}
<form class="login-form">
    <div>
        <label for="email-login">email:</label>
        <input type="text" id="email-login" />
    </div>
    <div>
        <label for="password-login">password:</label>
        <input type="password" id="password-login" />
    </div>
    <div>
        <button type="submit">login</button>
    </div>
</form>

{{!-- signup functionality --}}
<form class="signup-form">
    <div>
        <label for="username-signup">username:</label>
        <input type="text" id="username-signup" />
    </div>
    <div>
        <label for="email-signup">email:</label>
        <input type="text" id="email-signup" />
    </div>
    <div>
        <label for="password-signup">password:</label>
        <input type="password" id="password-signup" />
    </div>
    <div>
        <button type="submit">signup</button>
    </div>
</form>
{{!-- script tag for our front end js file 
important to keep in mind that the front-end JavaScript code will not be sent over 
to the client at the same time as the HTML content. 
The browser will make a new request for the JavaScript file 
after the template has rendered and it sees the linked <script> element.--}}
<script src="/javascript/login.js"></script>
